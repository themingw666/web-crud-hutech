<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Hiển thị sinh viên</title>
    <style>
      body {
        background-image: url('https://file1.hutech.edu.vn/file/editor/homepage/stories/hinh77-afd/1.jpg'); /* Replace with your image URL */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .container {
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    

    <div class="container">
        <h1>Hiển thị sinh viên</h1>
        <p><a class="btn btn-primary" href="/peoples/add" role="button">Thêm sinh viên</a></p>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Họ</th>
                <th scope="col">Tên</th>
                <th scope="col">Tuổi</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Giới tính (nam: true, nữ: false)</th>
                <th scope="col">Chỉnh sửa</th>
                <th scope="col">Xóa</th>
              </tr>
            </thead>
            <tbody>
            <% for (let i  = 0; i < peoples.length; i++) { %>
              <tr>
                <th scope="row"><%= peoples[i].id %></th>
                <td><%= peoples[i].firstname %></td>
                <td><%= peoples[i].lastname %></td>
                <td><%= peoples[i].age %></td>
                <td><%= peoples[i].address %></td>
                <td><%= peoples[i].isMale %></td>
                <td><a class="btn btn-success" href="/peoples/<%= peoples[i].id %>/edit" role="button">Chỉnh sửa</a></td>
                <td><a class="btn btn-danger" href="/peoples/<%= peoples[i].id %>/delete" role="button">Xóa</a></td>
              </tr>
              <% } %>
              
            </tbody>
          </table>
    </div>

  </body>
</html>